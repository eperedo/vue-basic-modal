{
	"name": "vue-basic-modal",
	"version": "0.1.0",
	"main": "dist/basicModal.common.js",
	"scripts": {
		"serve": "vue-cli-service serve --open",
		"build": "vue-cli-service build",
		"component":
			"vue-cli-service build --target lib --name basicModal src/components/basic-modal.vue",
		"lint": "vue-cli-service lint"
	},
	"dependencies": {
		"register-service-worker": "^1.0.0",
		"vue": "^2.5.16"
	},
	"devDependencies": {
		"@vue/cli-plugin-babel": "^3.0.0-beta.10",
		"@vue/cli-plugin-eslint": "^3.0.0-beta.10",
		"@vue/cli-plugin-pwa": "^3.0.0-beta.10",
		"@vue/cli-service": "^3.0.0-beta.10",
		"@vue/eslint-config-prettier": "^3.0.0-beta.10",
		"lint-staged": "^6.0.0",
		"node-sass": "^4.7.2",
		"sass-loader": "^6.0.6",
		"vue-template-compiler": "^2.5.13"
	},
	"browserslist": ["> 0.2%", "last 2 versions", "not ie <= 11"],
	"gitHooks": {
		"pre-commit": "lint-staged"
	},
	"lint-staged": {
		"*.js": ["vue-cli-service lint", "git add"],
		"*.vue": ["vue-cli-service lint", "git add"]
	}
